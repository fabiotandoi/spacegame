{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./public",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src"]
}
